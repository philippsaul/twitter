<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="create table greeting" author="psaul">
        <createTable tableName="greeting">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_greeting"/>
            </column>
            <column name="name" type="varchar(21)">
                <constraints nullable="false"/>
            </column>
            <column name="phrase" type="varchar(200)"/>
            <column name="created" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="create sequence greeting_seq" author="psaul">
        <createSequence sequenceName="greeting_seq" incrementBy="5"/>
    </changeSet>
</databaseChangeLog>